<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="puzzle.slider.com.picturepuzzle" >

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="puzzle.slider.com.picturepuzzle.MAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LevelSelector"
            android:label="@string/title_activity_level_selector" >
        </activity>
        <activity
            android:name=".Beginner_Activity"
            android:label="@string/title_activity_beginner_" >
        </activity>
        <activity
            android:name=".Level_Option"
            android:label="@string/title_activity_level__option" >
        </activity>
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Intermediate_Activity"
            android:label="@string/title_activity_intermediate_" >
        </activity>
        <activity
            android:name=".AdvanceActivity"
            android:label="@string/title_activity_advance" >
        </activity>
    </application>

</manifest>
